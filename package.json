{
	"name": "run-button-script",
	"displayName": "Run button script",
	"description": "Run scripts of the package.json in one click",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:run-button-script.run"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "run-button-script.run",
				"title": "Run script button",
				"icon": {
					"light": "./images/play-icon.svg",
					"dark": "./images/play-icon.svg"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "run-button-script.run",
					"when": "resourceLangId == typescript || resourceLangId == javascript",
					"group": "navigation"
				}
			]
		}
	},
	"configuration": {
		"title": "Run button script Configuration",
		"run-button-script.hasEditorTitleIcon": {
			"type": "boolean",
			"default": true,
			"description": "Show the run icon in the editor bar on the top right."
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}